import Projects from "../../Projects.astro";

interface Props {
  projectTypeRef: string;
  currentProjectSlug: string;
}

const { projectTypeRef, currentProjectSlug } = Astro.props;

const latestProjects = await fetchLatestThreeProjectsWithMatchingType(projectTypeRef, currentProjectSlug);
---

<section>
  <div class="content-wrapper">
    <h3>Zobacz więcej naszych projektów</h3>

    {
      latestProjects.length === 0 ? (
        <div class="no-results">
          <img src="/no-result.png" width={380} height={380} alt="Brak wyników" />
          <p>Nie znaleziono żadnego podobnego projektu</p>
        </div>
      ) : (
        <Projects projects={latestProjects} />
      )
    }

