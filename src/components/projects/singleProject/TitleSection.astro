---
interface Props {
  title: string;
  projectType: string;
  startDate: string;
  city: string;
}
const { title, projectType, startDate, city } = Astro.props;
---

<section>
  <div class="content-wrapper">
    <h2>{title}</h2>
    <div class="meta-info">
      <div class="info-date">
        <img src="/icons/calendar.svg" alt="" aria-hidden="true" />
        <p>{startDate}</p>
      </div>
      <div class="info-adress">
        <img src="/icons/location.svg" alt="" aria-hidden="true" />
        <p>{city}</p>
      </div>
    </div>
    <p class="meta-type">{projectType}</p>
  </div>
</section>

<style>
  section {
    margin-top: 0 !important;
    padding-top: 2rem !important;
  }
  h2 {
    font-weight: bold;
    padding-bottom: 2rem;
    line-height: 130%;
  }
  .content-wrapper {
    max-width: var(--section-max-width);
    margin: 0 auto;
  }
  .meta-info,
  .info-date,
  .info-adress {
    display: flex;
    align-items: center;
  }
  .meta-info {
    gap: 1rem;
    padding-bottom: 1rem;
  }

  .info-date,
  .info-adress {
    gap: 0.5rem;
  }
  .meta-info > div > p {
    color: #515151;
  }
  .meta-info > div > img {
    width: 36px;
    height: 36px;
    filter: invert(24%) sepia(8%) saturate(100%) hue-rotate(185deg)
      brightness(97%) contrast(85%);
  }
  /* Large screens (485px and below) */
  @media only screen and (max-width: 485px) {
    .meta-info > div > img {
      width: 24px;
      height: 24px;
    }
  }
</style>
