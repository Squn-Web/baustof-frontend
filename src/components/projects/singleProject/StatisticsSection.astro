---
import type { GetProjectBySlugQueryResult } from "../../../../sanity.types";

interface Props {
  projectDetails: GetProjectBySlugQueryResult[number]["projectDetails"];
}
const { projectDetails } = Astro.props;
---

<section>
  <div class="content-wrapper">
    {
      projectDetails?.map((statistic) => (
        <div class="meta-wrapper">
          <p>{statistic.label}</p>
          <p>{statistic.value}</p>
        </div>
      ))
    }
  </div>
</section>

<style>
  .content-wrapper {
    display: flex;
    justify-content: center;
    max-width: var(--section-max-width);
    margin: 0 auto;
  }
  .meta-wrapper {
    display: flex;
    flex-direction: column;
    flex: 1;
    gap: 2rem;
    padding: 2rem;
    border-left: 1px solid var(--text-color);
    border-right: 1px solid var(--text-color);
    text-align: center;
    max-width: 300px;
  }
  .meta-wrapper:not(:first-child) {
    margin-left: -1px;
  }
  .meta-wrapper > p {
    white-space: nowrap;
  }
  .meta-wrapper > p:last-child {
    font-weight: bold;
  }
  @media only screen and (max-width: 1200px) {
    .content-wrapper {
      flex-wrap: wrap;
      row-gap: 2rem;
    }
  }
  @media only screen and (max-width: 768px) {
    .content-wrapper {
      flex-direction: row !important;
      align-items: center;
      gap: 0 !important;
      row-gap: 2rem !important;
    }
    .meta-wrapper {
      gap: 1rem;
    }
  }
  @media only screen and (max-width: 485px) {
    .content-wrapper {
      row-gap: 1rem !important;
    }
    .meta-wrapper {
      flex: 0;
      min-width: 30vw;
      gap: 0.5rem;
      padding: 0.5rem;
    }
  }
</style>
