---
interface Props {
  text: string;
  href: string;
  path: string;
}

const { text, href, path } = Astro.props;
---

<a href={href} data-prefetch="visible">
  <p>{text}</p>
  <img class="icon" src={path} alt="Icon" />
</a>
<style>
  a {
    display: flex;
    justify-content: center;
    align-items: center;
    width: fit-content;
    gap: 0.75rem;
  }
  p {
    color: var(--primary-color);
    font-size: var(--font-size-text);
  }
</style>
