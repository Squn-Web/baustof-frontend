---
type Props = AboutHeroSection;

import type { AboutHeroSection } from "../../../sanity.types";
import Hero from "../Hero.astro";

const { text, image } = Astro.props;
---

<section>
  <Hero text={text} image={image} />
</section>

<style>
  section {
    padding-right: 0;
    padding-left: 0;
    padding-bottom: calc(0.25 * var(--section-padding));
  }
</style>
