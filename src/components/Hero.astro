---
import type { CustomImage } from "../../sanity.types";
import DynamicImage from "./DynamicImage.astro";

interface Props {
  text: string;
  image: CustomImage;
}

const { text, image } = Astro.props;
---

<div class="content-wrapper">
  <DynamicImage className="section-hero-image" image={image} />
  <h2>{text}</h2>
</div>

<style>
  .content-wrapper {
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
    height: var(--hero-height);
  }
  h2 {
    font-weight: bold;
    letter-spacing: 1px;
    color: var(--text-color-invert);
  }
</style>
