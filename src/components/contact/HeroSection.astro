---
type Props = ContactHeroSection;

import type { ContactHeroSection } from "../../../sanity.types";
import Hero from "../Hero.astro";

const { text, image } = Astro.props;
---

<section>
  <Hero image={image}>
    <h2>{text}</h2>
  </Hero>
</section>

<style>
  section {
    padding-right: 0;
    padding-left: 0;
    padding-bottom: calc(0.25 * var(--section-padding));
  }
  h2 {
    font-weight: bold;
    letter-spacing: 1px;
    color: var(--text-color-invert);
  }
</style>
