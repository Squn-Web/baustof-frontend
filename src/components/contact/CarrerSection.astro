---
type Props = ContactCarrerSection;

import type { ContactCarrerSection } from "../../../sanity.types";
import Hero from "../Hero.astro";

const { text, image, email } = Astro.props;
---

<section>
  <Hero image={image}>
    <div class="content-wrapper">
      <h3>Karriera</h3>
      <p>{text} <span>{email}</span></p>
    </div>
  </Hero>
</section>

<style>
  section {
    padding: 0;
  }
  h3 {
    font-weight: bold;
    letter-spacing: 1px;
    color: var(--text-color-invert);
  }
  p {
    color: var(--text-color-invert);
    font-size: calc(1.3 * var(--font-size-text));
    line-height: 170%;
    text-align: center;
    padding: 0 1rem;
  }
  .content-wrapper {
    display: flex;
    flex-direction: column;
    align-items: center;
    max-width: var(--section-max-width);
    margin: 0 auto;
    gap: 5rem;
  }
  span {
    color: var(--primary-color-accent);
    font-weight: bold;
  }

  @media only screen and (max-width: 1200px) {
    .content-wrapper {
      padding: 0 2rem;
    }
    p {
      font-size: calc(1.2 * var(--font-size-text));
      line-height: 150%;
    }
  }
  @media only screen and (max-width: 768px) {
    p {
      font-size: calc(1 * var(--font-size-text));
    }
  }
  @media only screen and (max-width: 485px) {
    p {
      font-size: calc(0.9 * var(--font-size-text));
    }
  }
</style>
