---
type Props = ContactDetailsSection;

import type { ContactDetailsSection } from "../../../sanity.types";
import { Image } from "astro:assets";
import { urlForImage } from "../../lib/urlForImage";
import Paragraphs from "../Paragraphs.astro";

const { cards, title } = Astro.props;
---

<section>
  <!-- <h3>{title}</h3> -->
  <div class="content-wrapper">
    {
      cards.map((card) => {
        return (
          <div class="card">
            <Image
              class="contact-section-icon"
              src={urlForImage(card.icon.asset).url()}
              width={128}
              height={128}
              alt={card.icon.alt}
            />
            <h4>{card.title}</h4>
            <Paragraphs className="scaleFont" paragraphs={card.text} />
          </div>
        );
      })
    }
  </div>
</section>

<style>
  h3 {
    text-align: center;
    margin-bottom: 5rem;
  }
  h4 {
    font-size: calc(1.8 * var(--font-size-h4));
  }
  .content-wrapper {
    display: flex;
    justify-content: space-between;
    max-width: var(--section-max-width);
    gap: 5rem;
    margin: 0 auto;
  }

  .card {
    display: flex;
    align-items: center;
    flex-direction: column;
    gap: 2rem;
  }

  @media only screen and (max-width: 1200px) {
    h4 {
      font-size: calc(0.9 * var(--font-size-h4));
    }
  }
  @media only screen and (max-width: 768px) {
    h3 {
      text-align: center;
      margin-bottom: 3rem;
    }
    h4 {
      font-size: calc(0.8 * var(--font-size-h4));
    }
  }
</style>
