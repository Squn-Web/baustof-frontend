---
type Props = ContactFormInput;

import type { ContactFormInput } from "../../../../sanity.types";

const { name, placeholder, label } = Astro.props;
---

<div>
  <label for={name}>{label}</label>
  <textarea
    required
    rows="6"
    class="form-input"
    name={name}
    id={name}
    placeholder={placeholder}></textarea>
</div>

<style>
  div {
    width: 100%;
  }
  textarea {
    resize: none;
  }
</style>
