---
type Props = HomeHeroSection;

import { Image } from "astro:assets";
import {  getImageProps, urlForImage } from "../../lib/urlForImage";
import ActionButtons from "../ActionButtons.astro";
import type { HomeHeroSection } from "../../../sanity.types";


const { text, logo, actionButtons, image } = Astro.props;
---

<section>
  <Image
    class="hero-image"
    alt={image.alt}
    {...getImageProps({
      image,
    })}
    fetchpriority="high"
    loading="eager"
  />
  <!-- <Image
    class="hero-image"
    src={urlForImage(image.asset).url()}
    width={2400}
    height={2400}
    alt={image.alt}
  /> -->
  <div class="content-align">
    <div class="content-wrapper">
      <Image
        class="logo"
        {...getImageProps({
      image: logo,
      customWidthSteps: [360],
      minimumWidthStep: 0.2,
      sizes: '100vw',
    })}
    
        alt={logo.alt}
      />
      <!-- <Image
        class="logo"
        src={urlForImage(logo.asset).url()}
        width={480}
        height={480}
        alt={logo.alt}
      /> -->
      <p>{text}</p>
      <ActionButtons actionButtons={actionButtons} />
    </div>
  </div>
</section>

<style>
  section {
    padding-top: 0;
    position: relative;
    height: var(--hero-height);
    margin-top: calc(-1 * var(--nav-height));
  }
  p {
    color: var(--text-color-invert);
    font-size: var(--hero-font-size);
    line-height: var(--hero-font-interline);
    margin-bottom: 3rem;
  }
  .hero-image {
    position: absolute;
    z-index: -1;
    top: 0;
    left: 0;
    object-fit: cover;
    width: 100%;
    height: 100%;
    object-position: 100% 60%;
    filter: brightness(70%);
  }
  .logo {
    margin: -70px 0 -100px -83px;
  }
  .content-wrapper {
    /* position: absolute; */
    z-index: 2;
    max-width: var(--hero-width);
    left: calc(var(--hero-width) / 4);
  }
  .content-align {
    max-width: var(--section-max-width);
    margin: 0 auto;
  }
</style>
