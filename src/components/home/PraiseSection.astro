---
import type { HomePraiseSection } from '../../../sanity.types';

type Props = HomePraiseSection;

const { text } = Astro.props;
---

<section>
  <div>
    <h2>{text}</h2>
  </div>
</section>

<style>
  section {
    position: relative;
  }
  div {
    position: absolute;
    z-index: 2;
    top: -70px;
    left: 50%;
    transform: translate(-50%, 0);
    max-width: fit-content;
    border-radius: 1rem;
    padding: 4rem;
    background-color: var(--primary-color);
    -webkit-box-shadow: 0px 10px 20px 4px rgba(0, 0, 0, 0.35);
    -moz-box-shadow: 0px 10px 20px 4px rgba(0, 0, 0, 0.35);
    box-shadow: 0px 10px 20px 4px rgba(0, 0, 0, 0.35);
  }
  h2 {
    color: var(--text-color-invert);
    font-weight: bold;
    white-space: nowrap;
  }
</style>
