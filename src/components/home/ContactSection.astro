---
type Props = HomeContactSection;

import { Image } from "astro:assets";
import { urlForImage } from "../../lib/urlForImage";
import ActionButtons from "../ActionButtons.astro";
import type { HomeContactSection } from "../../../sanity.types";
import DynamicImage from "../DynamicImage.astro";

const { title, subTitle, image, actionButtons } = Astro.props;
---

<section>
  <DynamicImage className="contact-img" image={image} />
  <div class="content-wrapper">
    <h3>{title}</h3>
    <p>{subTitle}</p>
    <ActionButtons actionButtons={actionButtons} />
  </div>
</section>

<style>
  section {
    position: relative;
    padding: calc(1.25 * var(--section-padding)) 0;
  }

  .content-wrapper {
    display: flex;
    flex-direction: column;
    align-items: center;
    max-width: var(--section-max-width);
    margin: 0 auto;
    gap: 1rem;
  }
  h3,
  p {
    color: var(--text-color-invert);
  }
  p {
    font-weight: bold;
    font-size: calc(1.3 * var(--font-size-text));
    margin-bottom: 3rem;
  }
</style>
