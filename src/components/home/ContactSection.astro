---
type Props = HomeContactSection;

import { Image } from "astro:assets";
import { getImageProps, urlForImage } from "../../lib/urlForImage";
import ActionButtons from "../ActionButtons.astro";
import type { HomeContactSection } from "../../../sanity.types";

const { title, subTitle, image, actionButtons } = Astro.props;
---

<section>
  <!-- <Image
    src={urlForImage(image.asset).url()}
    width={1000}
    height={1000}
    alt={image.alt}
  /> -->
<Image
    {...getImageProps({
      image,
    })}
    alt={image.alt}
  />

  
  <div class="content-wrapper">
    <h3>{title}</h3>
    <p>{subTitle}</p>
    <ActionButtons actionButtons={actionButtons} />
  </div>
</section>

<style>
  section {
    position: relative;
    padding: calc(2 * var(--section-padding)) 0;
  }
  img {
    position: absolute;
    top: 0;
    left: 0;
    z-index: -2;
    object-fit: cover;
    width: 100%;
    height: 100%;
    filter: brightness(40%);
  }

  .content-wrapper {
    display: flex;
    flex-direction: column;
    align-items: center;
    max-width: var(--section-max-width);
    margin: 0 auto;
    gap: 1rem;
  }
  h3,
  p {
    color: var(--text-color-invert);
  }
  p {
    font-weight: bold;
    font-size: calc(1.3 * var(--font-size-text));
    margin-bottom: 3rem;
  }
</style>
