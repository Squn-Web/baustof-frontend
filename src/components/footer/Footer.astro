---
import { Image } from "astro:assets";
import { urlForImage } from "../../lib/urlForImage";
import { fetchFooter } from "../../api/fetchFooter/query";
import IconText from "../IconText.astro";

const footer = await fetchFooter();
---

<footer>
  <div class="content-wrapper">
    <div class="contact-wrapper">
      <div class="image-temp"></div>
      <div class="contact-content">
        <h4>title</h4>
        <p>desc</p>
      </div>
      <button>KONTAKT</button>
    </div>
    <div class="informations-wrapper">
      <div class="logo-wrapper">
        <Image
          src={urlForImage(footer.logo.asset).url()}
          width={64}
          height={64}
          alt={footer.logo.alt}
        />
        <p>
          Solidne wykonanie Lorem ipsum dolor, sit amet consectetur adipisicing
          elit. Debitis maxime ab assumen
        </p>
      </div>

      <div class="navigation-wrapper">
        <p><a href="#">Strona główna</a></p>
        <p><a href="#">O nas</a></p>
        <p><a href="#">Kontakt</a></p>
        <p><a href="#">Oferty</a></p>
        <p><a href="#">Projekty</a></p>
      </div>

      <div class="information-wrapper">
        <IconText path="/icons/calendar.svg">
          <p>{footer.addressFirstLine}, {footer.addressSecondLine}</p>
        </IconText>
        <IconText path="/icons/calendar.svg">
          <p>{footer.contactPhone}</p>
        </IconText>
        <IconText path="/icons/calendar.svg">
          <p>{footer.contactEmail}</p>
        </IconText>
        <IconText path="/icons/calendar.svg">
          <p>Pon-Pt: 8:00-17:00</p>
        </IconText>
      </div>
    </div>
    <div class="credits-wrapper">
      <p>Strona wykonana przez SqunWeb</p>
      <div class="credits-content">
        <p>NIP {footer.nip}</p>
        <div class="dot"></div>
        <p>KRS 123</p>
      </div>
    </div>
  </div>
</footer>

<style>
  footer {
    background-color: var(--primary-color);
  }
  p,
  a,
  h5,
  h4 {
    color: var(--text-color-invert);
  }
  a {
    text-decoration: underline;
  }
  h5,
  h4 {
    font-weight: bold;
  }
  .content-wrapper {
    display: flex;
    flex-direction: column;
    max-width: var(--section-max-width);
    margin: 0 auto;
    padding: 2rem;
    gap: 2rem;
  }

  .navigation-wrapper,
  .information-wrapper,
  .logo-wrapper {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .logo-wrapper {
    line-height: 150%;
  }

  .contact-wrapper {
    display: flex;
    background-color: #29318c;
    padding: 1rem;
    border-radius: var(--section-img-border-radius);
    gap: 2rem;
    align-items: center;
  }

  .image-temp {
    width: 48px;
    height: 48px;
    background-color: red;
  }
  .contact-wrapper button {
    margin-left: auto;
    border-radius: var(--button-border-radius);
    padding: 1rem;
  }
  .contact-content {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }
  .informations-wrapper {
    display: flex;
    gap: 2rem;
  }
  .informations-wrapper > div {
    flex: 1;
  }

  .credits-wrapper {
    display: flex;
    border-top: 1px solid #ffffff;
    padding-top: 1rem;
  }

  .credits-wrapper > p {
    font-size: calc(0.5 * var(--font-size-text));
  }

  .credits-content {
    display: flex;
    margin-left: auto;
    align-items: center;
    gap: 1rem;
  }
  .credits-content .dot {
    width: 8px;
    height: 8px;
    background-color: #ffffff;
    border-radius: 10rem;
  }

  /* Tablet - 768px and below */
  @media (max-width: 768px) {
    .content-wrapper {
      text-align: center;
    }
    .informations-wrapper,
    .logo-wrapper {
      flex-direction: column;
      align-items: center;
    }
  }

  /* Mobile - 480px and below */
  @media (max-width: 480px) {
    img {
      max-height: 150px;
    }
    .contact-wrapper {
      gap: 1rem;
    }
    .informations-wrapper > div {
      gap: 1rem;
    }
    .credits-wrapper {
      line-height: 120%;
    }
  }

  /* Small mobile - 320px and below */
  @media (max-width: 320px) {
    .content-wrapper {
      padding: 1rem 0.5rem;
    }

    img {
      max-height: 120px;
    }

    .navigation-wrapper,
    .information-wrapper {
      font-size: 0.9rem;
    }
  }
</style>
